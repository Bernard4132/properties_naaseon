<body style="background-color: #f2f2f2;">

<section class="aduins">
  <div class="container">
    <div class="row" style="margin-top: 70px">
      <div class="col-lg-12">
        <h1 style="text-align: center; color: white; position: relative; top: 65px; font-weight: 900;  text-shadow: 1px 0px 6px rgba(0, 0, 0, 1);">House for Sale at Bellevue Estate</h1>
      </div>
    </div>
  </div>
</section>

<section class="picshold">
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <p style="font-weight: 300; text-align: center;">
        A furnished 3 Bedroom house selling for $70,000 at Bellevue Estate, Nsawam - Eastern Region.
      </p>
      <p style="text-align: center;">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Make Buy Request
       </button>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4 col-md-6 col-sm-12">
      <div class="prophold">
        <img src="https://res.cloudinary.com/nikasemo/image/upload/v1511437847/n1_imiyqu.jpg" class="img-fluid">
      </div>
    </div>
    <div class="col-lg-4 col-md-6 col-sm-12">
      <div class="prophold">
        <img src="https://res.cloudinary.com/nikasemo/image/upload/v1511437847/n2_ti1ukw.jpg" class="img-fluid">
      </div>
    </div>
    <div class="col-lg-4 col-md-6 col-sm-12">
      <div class="prophold">
        <img src="https://res.cloudinary.com/nikasemo/image/upload/v1511437847/n3_quud3j.jpg" class="img-fluid">
      </div>
    </div>
    <div class="col-lg-4 col-md-6 col-sm-12">
      <div class="prophold">
        <img src="https://res.cloudinary.com/nikasemo/image/upload/v1511437849/n4_f8lj8b.jpg" class="img-fluid">
      </div>
    </div>
    <div class="col-lg-4 col-md-6 col-sm-12">
      <div class="prophold">
        <img src="https://res.cloudinary.com/nikasemo/image/upload/v1511437849/n5_uuljbn.jpg" class="img-fluid">
      </div>
    </div>
    <div class="col-lg-4 col-md-6 col-sm-12">
      <div class="prophold">
        <img src="https://res.cloudinary.com/nikasemo/image/upload/v1511437848/n6_py0w4q.jpg" class="img-fluid">
      </div>
    </div>
  </div>
  <p style="text-align: center;">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Make Buy Request
       </button>
      </p>
</div>
</section>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Make Buy Request</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
   <% if notice %>
<div class="alert alert-success alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <p class="notice"><%= notice %></p>
</div>
<% end %>

  <div class="form-group">
    <label>Your Name</label>
    <%= f.text_field :name, :class => "form-control", :placeholder => "Enter Your Name" %>
  </div>

  <div class="form-group">
    <label>Your Phone number</label>
    <%= f.text_field :phonenumber, :class => "form-control", :placeholder => "Enter Your Phone Number" %>
  </div>

  <div class="form-group">
    <label>Your Email</label>
    <%= f.text_field :email, :class => "form-control", :placeholder => "Enter Your Email" %>
  </div>

  <div class="form-group">
    <label>Message for Us</label>
    <%= f.text_area :message, :class => "form-control", :rows => "5", :placeholder => "Enter Your Message" %>
  </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Send Request", :class => "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<% end %>


<script type="text/javascript">
$('#myModal').on('shown.bs.modal', function () {
  $('#myInput').trigger('focus')
})
</script>
</body>
