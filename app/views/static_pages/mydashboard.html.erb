<style type="text/css">
.aduins{
 background:linear-gradient(0deg,rgba(0,0,0,0.8),rgba(0,0,0,0.1)),url(https://res.cloudinary.com/nikasemo/image/upload/v1510176053/properties_ad6osc.jpg);
  background-position:center;
  min-height: 200px;
}

.constyle{
	padding: 7px; 
	border-radius: 5px; 
	background-color: #ffffff; 
	border: 1px solid #d9d9d9; 
	margin: 10px;
}

.orderandcontact{
	padding-top: 30px;
}

</style>

<body style="background-color: #f2f2f2;">
	
<% if notice %>
<div class="alert alert-success alert-dismissible" style="position: absolute; top: 100px; z-index: 999;" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <p class="notice"><%= notice %></p>
</div>
<% end %>

<section class="aduins">
  <div class="container">
    <div class="row" style="margin-top: 70px">
      <div class="col-lg-12">
        <h1 style="text-align: center; color: white; position: relative; top: 65px; font-weight: 900;  text-shadow: 1px 0px 6px rgba(0, 0, 0, 1);">Welcome to Your Dashboard</h1>
      </div>
    </div>
  </div>
</section>

<section class="orderandcontact">
	<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<p style="text-align: center; font-weight: 300;">Hello Admin, you are welcome to your dashboard. Manage your orders and your contact requests from Here.</p>
			<hr>
		</div>
	</div>
</div>

<div class="container" style="margin-top: 10px;">
	<div class="row">
		<div class="col-lg-6 col-md-12">
			<h5>Unconfirmed Property Requests</h5>
			<%= render @allorders %>
		</div>
		<div class="col-lg-6 col-md-12">
			<h5>Contact Request</h5>
			<% @allcontacts.each do |contact| %>
             <p class="constyle">
             <span><%= contact.name %></span><br>
             <span><%= contact.phonenumber %></span><br>
             <span><%= contact.email %></span><br>
             <span><strong>Message: </strong><%= contact.message %> </span>
             </p>
			<% end %>
		</div>
	</div>
</div>
<hr>
<br><br>
</section>

</body>